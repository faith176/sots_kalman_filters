{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FilteredEvent",
  "type": "object",
  "required": ["sensor_id", "timestamp", "filtered_measurement", "quality", "stream_info"],
  "properties": {
    "sensor_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "number"
    },
    "filtered_measurement": {
      "type": "number"
    },
    "quality": {
      "type": "object",
      "properties": {
        "imputed": { "type": "boolean" },
        "confidence": { 
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        }
      },
      "required": ["imputed", "confidence"]
    },
    "stream_info": {
      "type": "object",
      "properties": {
        "stream_type": { "type": "string" },
        "unit": { "type": "string" },
        "filter_source": { "type": "string" },
        "filter_version": { "type": "string" },
        "location": { "type": "string" }
      },
      "required": ["stream_type", "unit", "filter_source"]
    }
  },
  "additionalProperties": false
}
